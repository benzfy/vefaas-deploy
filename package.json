{
  "name": "vefaas-deploy",
  "version": "1.0.0",
  "description": "Build and deploy to Volcengine FaaS (veFaaS) - Generic CLI tool",
  "type": "module",
  "license": "MIT",
  "author": "zhoufangyuan",
  "repository": {
    "type": "git",
    "url": "https://github.com/zhoufangyuan/vefaas-deploy"
  },
  "keywords": [
    "volcengine",
    "vefaas",
    "faas",
    "serverless",
    "deploy",
    "cli"
  ],
  "bin": {
    "vefaas-deploy": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/cli.tsx --format esm --dts",
    "dev": "tsup src/cli.tsx --format esm --watch",
    "start": "node dist/cli.js",
    "deploy": "pnpm build && node dist/cli.js"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "conf": "^13.0.1",
    "execa": "^9.5.1",
    "figures": "^6.1.0",
    "ink": "^5.0.1",
    "ink-select-input": "^6.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "ora": "^8.1.1",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.12",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  }
}

